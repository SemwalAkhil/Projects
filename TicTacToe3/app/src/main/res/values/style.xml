<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom style for Tic Tac Toe buttons -->
    <style name="TicTacToeButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">2dp</item> <!-- Adjust margin to create space between buttons -->
        <item name="android:background">@drawable/button_border</item> <!-- Use the border drawable -->
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
